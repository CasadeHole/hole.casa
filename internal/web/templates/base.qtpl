{% interface
Page {
	Title()
	Head()
	Body()
}
%}


{% func PageTemplate(p Page) %}
<!DOCTYPE html>
<html>
	<head>
		<title>{%= p.Title() %}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		{%= p.Head() %}
	</head>
	<body>
		{%= p.Body() %}
	</body>
</html>
{% endfunc %}


{% code type BasePage struct {} %}
{% func (p *BasePage) Head() %}{% endfunc %}
{% func (p *BasePage) Title() %}{% endfunc %}
{% func (p *BasePage) Body() %}{% endfunc %}
